@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.Owin

@if (Request.IsAuthenticated)
{

        <div class="dropdown">
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { Id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                var userManager = HttpContext.Current.GetOwinContext().GetUserManager<ApplicationUserManager>();
                var user = userManager.FindById(User.Identity.GetUserId());

                <a id="user-btn" href="#" class="btn dropdown-toggle" data-toggle="dropdown" 
                   role="button" aria-haspopup="true" aria-expanded="false">
                    Bonjour @user.FirstName! <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="/Account/Historic"><span class="fa fa-cogs"></span>Mes infos</a></li>
                    <li><a href="/Offer/Create"><span class="glyphicon glyphicon-usd"></span>Vendre</a></li>
                    @if (User.IsInRole("Administrator"))
                    {
                        <li><a href="/Admin"><span class="fa fa-user"></span> Administration</a></li>
                    }
                    <li role="separator" class="divider"></li>
                    <li>
                        <a href="#" onclick="$('#logoutForm').submit()">
                        <span class="glyphicon glyphicon-log-out"></span>  
                        Se d&eacute;connecter</a>
                    </li>
                </ul>
            }
        </div>

        }
        else
        {
        <a href="/Account/Login">connexion</a>
        }
