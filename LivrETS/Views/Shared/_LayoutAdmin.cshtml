@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/template_admin/bootstrap.min.css")">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/template_admin/sb-admin.css")">
    <!-- Custom Fonts -->
    <link rel="stylesheet" href="@Url.Content("~/Content/font-awesome/css/font-awesome.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/dropdowns-enhancement.css")">
    
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    @RenderSection("styles", required: false)
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            @Html.Partial("_HeaderAdmin")

            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            @if (Request.IsAuthenticated)
            {
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav side-nav">
                        <li class="active">
                            <a href="/Admin/Index"><i class="fa fa-fw fa-dashboard"></i> Accueil</a>
                        </li>
                        
                        <li>
                            <a href="javascript:;" data-toggle="collapse" data-target="#user">
                                <i class="fa fa-fw fa-user"></i> Utilisateurs <i class="fa fa-fw fa-caret-down"></i>
                            </a>
                            <ul id="user" class="collapse">
                                <li><a href="/Admin/ManageUsers">Liste des utilisateurs</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="javascript:;" data-toggle="collapse" data-target="#fair">
                                <i class="fa fa-fw fa-table"></i> Foire <i class="fa fa-fw fa-caret-down"></i>
                            </a>
                            <ul id="fair" class="collapse">
                                <li><a href="/Admin/ManageFairs">Liste des foires</a></li>
                            </ul>
                        </li>
                        
                        <li>
                            <a href="javascript:;" data-toggle="collapse" data-target="#offre">
                                <i class="fa fa-fw fa-book"></i> Articles <i class="fa fa-fw fa-caret-down"></i>
                            </a>
                            <ul id="offre" class="collapse">
                                <li><a href="/Admin/ManageOffers">Liste des articles</a></li>
                                <li><a href="/Offer/Create">Ajouter un article</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            }
            <!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper">
            <div class="container-fluid">
                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            @ViewData["Title"] 
                        </h1>
                        <ol class="breadcrumb">
                            <li class="active">
                                <i class="fa fa-dashboard"></i> 
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
                <div class="row hide">
                    <div class="col-lg-12">
                        <div class="alert alert-info alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <i class="fa fa-info-circle"></i>  <strong>Like SB Admin?</strong> Try out
                            <a href="http://startbootstrap.com/template-overviews/sb-admin-2" class="alert-link">SB Admin 2</a>
                            for additional features!
                        </div>
                    </div>
                </div>
                @RenderBody()
            </div>
            <!-- /.container-fluid -->
        </div>

    </div>
            <!-- /#wrapper -->
            <script src="https://code.jquery.com/jquery-2.2.3.min.js"
                    integrity="sha256-a23g1Nt4dtEYOj7bR+vTu7+T8VP13humZFBJNIYoEJo="
                    crossorigin="anonymous"></script>
            <script src="~/Scripts/template_admin/bootstrap.min.js"></script>
            <script src="~/Scripts/dropdowns-enhancement.js"></script>
            <script src="~/Scripts/bootstrap-notify.min.js"></script>
            <script src="~/Scripts/site.js"></script>

            @RenderSection("scripts", required: false)

            



</body>
</html>

