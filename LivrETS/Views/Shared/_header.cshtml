@using LivrETS.Helpers
<!-- ======================= HEADER =================================== -->
<header class="header">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12">
                <!--=================================LOGO=============================== -->
                <div class="logo text-md-center">
                    <h1>
                        <a href="/home/index">
                            <!--Livr<span class="primary-color">ETS</span> -->
                            <img src="~/Images/logos/LivreETS.png" width="50%" />
                        </a>
                    </h1><small id="beta" class="hide">Beta</small>
                </div><!-- /.logo -->
                <!-- ============================= LOGO : END ========================== -->
            </div><!-- /.col -->
            <div class="col-md-5 col-sm-5 col-xs-12">
                <!-- ========================== SEARCH BAR=============================== -->

                @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "block-search form-inline" }))
                {
                    <div class="form-group">
                        @HomeHelpers.GetSelectResearch(Request.QueryString["select_search"])
                    </div>
                    <div class="input-group">
                        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, 
                       new { @class = "form-control", placeholder= "Toutes les annonces" })
                        <span class="input-group-btn">
                            <button class="btn btn-primary-very-light search-button" type="submit">
                            <span class="glyphicon glyphicon-search"></span></button>
                        </span>
                    </div><br />
                }
                        <!-- ========================== SEARCH BAR :END ===========================-->
            </div><!-- /.col -->
            <div class="col-md-3 col-sm-3 col-xs-12">
                <!-- ======================== BLOCK HEADER LINKS========================= -->
                <div class="block-header-links">
                    <ul class="nav nav-header-link pull-right">
                        <li>@Html.Partial("_LoginPartial")</li>
                    </ul><!-- /.nav-header-link -->
                </div><!-- /.block-header-links -->
                <!-- =================== BLOCK HEADER LINKS :END ======================== -->
            </div><!-- /.col -->
        </div><!-- /.row -->
        <a class="btn-shopping-cart hidden-xs hide" href="#" data-toggle="modal" data-target=".myCart-modal-lg">
            <span class="fa fa-heart"></span>
            <span class="cart-items-count">0</span>
        </a>
    </div><!-- /.container -->
    <!-- =================== NAVBAR PRIMARY ============================== -->
    <nav class="yamm navbar navbar-primary animate-dropdown" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button id="btn-navbar-primary-collapse" type="button" class="navbar-toggle" 
                        data-toggle="collapse" data-target="#navbar-primary-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div><!-- /.navbar-header -->
            <div class="collapse navbar-collapse" id="navbar-primary-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Vendre", "Create", "Offer")</li>
                        <li>&nbsp;</li>
                    }
                    
                        <!----><li class="dropdown">
                            <a href="#" data-hover="dropdown" data-toggle="dropdown" class="dropdown-toggle">Foire</a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Informations", "Program", "Fair")</li>
                                @if (User.IsInRole("Administrator") || User.IsInRole("Clerk"))
                                {
                                    <li>@Html.ActionLink("Cueillette", "Pick", "Fair")</li>
                                    <li>@Html.ActionLink("Vente", "Sell", "Fair")</li>
                                    <li>@Html.ActionLink("Récupération", "Retrieve", "Fair")</li>
                                }
                            </ul>
                        </li><!---->
                    
                    @if (User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Administration", "Index", "Admin")</li>
                    }
                </ul><!-- /.nav -->

                <div class="navbar-right user-options hide">
                    <div class="btn-group">
                        <button data-hover="dropdown" data-toggle="dropdown" 
                                class="dropdown-toggle btn btn-primary-very-light navbar-btn">
                                    USD 
                        <b class="caret"></b>
                        </button>
                        <!--<ul class="dropdown-menu">
                            <li><a href="#">EUR</a></li>
                            <li><a href="#">INR</a></li>
                        </ul>-->
                    </div><!-- /.btn-group -->
                    <div class="btn-group">
                        <button data-hover="dropdown" data-toggle="dropdown" 
                                class="dropdown-toggle btn btn-primary-very-light navbar-btn">
                                FR <b class="caret"></b></button>
                        <ul class="dropdown-menu">
                            <li><a href="#">EN</a></li>
                        </ul><!-- /.dropdown-menu -->
                    </div><!-- /.btn-group -->
                </div><!-- /.navbar-right -->
            </div><!-- /.collapse navbar-collapse -->
        </div><!-- /.container -->
    </nav><!-- /.yamm -->
    <!-- =================== NAVBAR PRIMARY :END ============================== -->
</header><!-- /.header -->
<!-- =================== HEADER :END ============================== -->
