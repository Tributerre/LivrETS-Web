@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    @RenderSection("styles", required: false)

<style>

    #menu-general-admin {
        padding: 40px;
    }

    #menu-general-admin ul li {
        padding: 5px;
        padding-right: 10px;
    }

    #menu-general-admin ul li:not(:last-child){
        border-right: 1px solid gray;
    }

    #menu-general-admin ul li a {
        color: black;
        font-size: 1.5em;
    }

    #menu-general-admin ul li a:hover {
        color: green;
    }

    thead > tr > th {
        padding: 5px;
    }

    #group-btn-action {
        margin-bottom: 30px;
        padding-right: 16px;
    }
</style>
}


<div class="container">
    <div class="row">
        <div class="text-center">
            <div id="menu-general-admin"> 
                <ul class="list-inline">
                    <li>@Html.ActionLink("Mes annonces", "Historic", "Account")</li>
                    <li>@Html.ActionLink("Profile", "Profile", "Account")</li>
                </ul>
            </div>

        </div>
        <div class="row" id="group-btn-action">
            @RenderSection("actions", required: false)
        </div>
    </div>      

    @RenderBody()
</div>


@section Scripts {
    @RenderSection("scripts", required: false)
}