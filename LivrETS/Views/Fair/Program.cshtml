@model LivrETS.Models.Fair

@{
    ViewBag.Title = "Informations de la foire";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.css">

    <style>
        table{
            width: 100%;
        }
        th{
            background-color: #4CAF50;
            color: white;
        }
        tr th{
            font-size: 1.3em;
        }
        td, th{
            padding: 10px;
        }
        tr:nth-child(even) {background-color: #f2f2f2}
        table, th, td{
            border: 1px solid black;
        }
        #group-table-1{
            min-height:300px;
        }
    </style>
}


<div class="content">
    <div class="container">
    @if (Model != null)
    {
        <div class="page-header">
            <h1>Informations <small>Foire @Model.TrimesterToString()</small></h1>
        </div>

        <div class="row" id="group-table-1">
            <h2>Horaires</h2>
            <table id="table-1">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Heure</th>
                        <th>Activité</th>
                        <th>Emplacement</th>
                    </tr>
                </thead>
                @foreach (var fs in Model.FairSteps)
                {
                    <tr>
                        <td>@fs.StartDateTime.ToString("dd MMMM")</td>
                        <td>
                            @fs.StartDateTime.ToString("HH:MM") -
                            @fs.EndDateTime.ToString("HH:MM")
                        </td>
                        <td>@fs.TypeNamePhase</td>
                        <td>@fs.Place</td>
                    </tr>
                }
            </table>
        </div>

        <div class="row" id="group-table-2">
            <h2>Liste des livres</h2>
            <table id="table-2" data-id="@Model.Id" class="table-stripped table-bordered table-hover display" 
                   cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Prix</th>
                    </tr>
                </thead>
            </table>
        </div>
    }else
    {
        <div style="height:400px; padding:10% 0;" class="text-center" >
            <h1 style="font-size:5em;"><span class="primary-color">Désolé !</span></h1>
            <h2>Aucune foire n'est prévue</h2>
        </div>

    }
    </div>

</div>

@section Scripts {
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/Scripts/fair/informations.js"></script>
}