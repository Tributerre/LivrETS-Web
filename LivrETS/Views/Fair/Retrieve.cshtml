@using LivrETS.ViewModels
@using LivrETS.Models
@model RetrieveViewModel
@{
    ViewBag.Title = "Récupérer";
}
@section Styles {
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.css">

    <style>
        div.group-error {
            margin: 10% 0;
            min-height: 200px;
        }

        div.group-error h1{
            font-size: 70px;
        }

        .notsold{background-color: #eaeaea; color: black;}
        #give-price h4{
            font-size: 2em;
        }
        #give-price span{
            color: red;
            font-size: 3em;
            font-weight:400;
        }
    </style>
}
<div class="content">
    <div class="container">
        @if (Model.Fair == null /*|| Model.Fair.Phase != FairPhase.RETRIEVAL*/)
        {
            <div class="row">
                <div class="group-error text-center">
                    <div class="col-md-12">
                        <h1 class="primary-color">Désolé!</h1>
                    </div>
                    <div class="col-md-12">
                        <h2>
                            Vous n'&ecirc;tes pas pr&eacute;sentement en
                            p&eacute;riode de <span class="primary-color">r&eacute;cup&eacute;ration</span>  =(
                        </h2>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="page-header">
                <h1>R&eacute;cup&eacute;rer des articles <small>de la Foire @Model.Fair.StartDate.Year</small></h1>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label>Numéro de l'étudiant</label>
                    <input type="text" class="form-control" id="in-barcode" placeholder="Espace de numérisation" />
                </div>
                
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h4>Articles</h4>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="table-responsive" id="group-table">

                        <table id="articles-table" class="table-stripped table-bordered table-hover " 
                               cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Titre</th>
                                    <th>Vendeur</th>
                                    <th>Prix</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-6">
                    
                    <div class="text-center">
                        <div id="give-price">
                            <h4>Argent à donner</h4>
                            <span id="retreiveprice">0</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" style="margin-top: 10px;">
                <div class="col-md-6">
                    <button id="btn-reinitialize" type="button" class="btn btn-default">Réinitialiser</button>
                    <button id="btn-retrieve" type="button" class="btn btn-primary pull-right">R&eacute;cup&eacute;rer</button>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/fair/retrieve.js"></script>
}
